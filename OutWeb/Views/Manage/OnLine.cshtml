
@{
    Layout = "~/Views/Shared/_MLayout.cshtml";
    ViewBag.Crumb = "線上諮詢維護";
    ViewBag.subnav = "n3";
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li>@ViewBag.Crumb</li>
    </ul>
}

<h3 class="title">@ViewBag.Crumb</h3>

<table class="table-list table-hover table-striped">
    <colgroup>
        <col style="width: 10%">
        <col>
        <col style="width: 20%">
        <col span="2" style="width: 15%">
    </colgroup>
    <tr>
        @* 點選排序功能 (點一下遞增, 點兩下遞減)
           <button class="th-sort-toggle"></button>
           遞增 asc
           <button class="th-sort-toggle asc"></button>
           遞減 desc
           <button class="th-sort-toggle desc"></button>
        *@
        <th>
            <button class="th-sort-toggle">姓名</button>
        </th>
        <th class="text-left">諮詢內容</th>
        <th>
            <button class="text-left th-sort-toggle">E-mail</button>
        </th>
        <th>
            <button class="th-sort-toggle">諮詢日期</button>
        </th>
        <th>
            <button class="th-sort-toggle">諮詢門市</button>
        </th>
    </tr>
    @* 預設依日期排序(由近至遠) *@
    <tr>
        <td>陳小姐</td>
        <td class="text-left">詢問進度狀況</td>
        <td class="text-left">sam@gpower.net</td>
        <td>2017-03-27</td>
        <td>台北形象概念店</td>
    </tr>
</table>
<footer class="table-foot">
    <small class="float-r">第 1-1 筆，共 1 筆</small>
    <nav class="pager">
        <a href="" class="oi" data-glyph="media-step-backward" title="到最前頁"></a>
        <a href="" class="oi" data-glyph="chevron-left" title="上一頁"></a>
        <span>
            第
            <input type="number" min="1" value="1">
            頁，共 1 頁
        </span>
        <a href="" class="oi" data-glyph="chevron-right" title="下一頁"></a>
        <a href="" class="oi" data-glyph="media-step-forward" title="到最後頁"></a>
    </nav>
</footer>